<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:local="clr-namespace:STimg" 
        x:Class="STimg.View.MainWindow"
        mc:Ignorable="d" 
        Height="740" Width="1220" 
        MinWidth="428" 
        ResizeMode="CanResizeWithGrip" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        Background="Transparent" 
        AllowsTransparency="True">
    <Grid>
        <!--Background-->
        <Border CornerRadius="25 25 0 25">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#eedcfa" Offset="0.25"/>
                    <GradientStop Color="#bec4eb" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>
            <!--TopBar-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!--Logo-->
                <Canvas Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Image Source="/Images/logo.png" Width="118" Height="98" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="-53"/>
                </Canvas>
                <!-- Buttons-->
                <Canvas Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Button x:Name="btnHelp" Style="{StaticResource HoverButtonStyle}" Background="Transparent" BorderThickness="0" Content="H E L P" Foreground="#8c61b0" FontSize="24" FontFamily="Montserrat" Cursor="Hand" Canvas.Left="100" Canvas.Top="35"/>
                    <Button x:Name="btnEdit" Style="{StaticResource HoverButtonStyle}" Background="Transparent" BorderThickness="0" Content="E D I T" Foreground="#8c61b0" FontSize="24" FontFamily="Montserrat" Cursor="Hand" Canvas.Left="350" Canvas.Top="35"/>
                </Canvas>
                <Canvas Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button x:Name="btnSamples" Style="{StaticResource HoverButtonStyle}" Background="Transparent" BorderThickness="0" Content="S A M P L E S" Foreground="#8c61b0" FontSize="24" FontFamily="Montserrat" Cursor="Hand" Canvas.Right="290" Canvas.Top="35"/>
                    <Button x:Name="btnMinimize" Style="{StaticResource RoundButtonTemplate}" Width="45" Height="45" Background="Transparent" BorderThickness="0" Content="-" Foreground="#8c61b0" FontSize="35" FontFamily="Consolas" Cursor="Hand" Canvas.Right="100" Canvas.Top="25" Click="btnMinimize_Click" VerticalContentAlignment="Center"/>
                    <Button x:Name="btnClose" Style="{StaticResource RoundButtonTemplate}" Width="45" Height="45" Background="Transparent" BorderThickness="0" Content="X" Foreground="#8c61b0" FontSize="24" FontFamily="Consolas" Cursor="Hand" Canvas.Right="50" Canvas.Top="25" Click="btnClose_Click"/>
                </Canvas>
            </Grid>
        </Border>
        <!--MainGrid-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="165"/>
                <ColumnDefinition Width="610"/>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="500"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <!--Drag and drop section -->

            <StackPanel VerticalAlignment="Top" Grid.Column="1" Grid.Row="2">

                <Button x:Name="btnUpload" Style="{StaticResource RoundButtonTemplate}" Width="280" Height="42"  BorderThickness="0" Content="U P L O A D   I M A G E" Foreground="#808c61b0" FontSize="24" FontFamily="Montserrat" Cursor="Hand" Background="#FFDABBFF"/>

            </StackPanel>
            <StackPanel VerticalAlignment="Center" Grid.Column="1" Grid.Row="1">
                <Grid>
                    <Rectangle 
                    AllowDrop="True"
                    Fill="#5CE6E6FA"
                    RadiusX="10"
                    RadiusY="10"
                    StrokeDashArray="7,7"
                    StrokeThickness="1"
                    StrokeDashCap="Round"
                    Stroke="#80B88AD8"
                    Height="400"
                    Width="500"/>
                    <!-- Text and icon-->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="ImagePlusOutline" Foreground="#3F8C75AC" Width="316" Height="126" Margin="0 0 0 25 "/>
                        <TextBlock  Foreground="#3F8C61B0" FontSize="16" FontFamily="Consolas" Height="62"  LineHeight="36" Cursor="AppStarting" TextAlignment="Center" FontWeight="Bold" Width="320"><Run Text="D R O P  I M A G E"/><LineBreak/><Run Text="T O  U P L O A D"/></TextBlock>
                    </StackPanel>
                </Grid>
            </StackPanel>


            <!-- Edit Buttons-->

            <StackPanel VerticalAlignment="Center" Grid.Column="2" Grid.Row="1">

                <!-- PopUp Menu-->
                <StackPanel  Orientation="Horizontal" Margin="0,50,0,100">
                    <TextBlock Text="F I L T E R S" Style="{StaticResource LeftTextStyle}" Foreground="#8c61b0" FontSize="24" FontFamily="Consolas"/>
                    <materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" HorizontalAlignment="Right" Margin="15 0 0 10"  >
                        <materialDesign:PopupBox.ToggleContent>
                            <materialDesign:PackIcon Kind="PanDown" Foreground="#FF8C75AC" Width="48" Height="48" HorizontalAlignment="Center" />
                        </materialDesign:PopupBox.ToggleContent>
                        <StackPanel Width="150" >
                            <Button x:Name="btnFilter1" Style="{StaticResource MenuButtonTemplate}" Content="F I L T E R 1"/>
                            <Button x:Name="btnFilter2" Style="{StaticResource MenuButtonTemplate}" Content="F I L T E R 2"/>
                            <Button x:Name="btnFilter3" Style="{StaticResource MenuButtonTemplate}" Content="F I L T E R 3"/>
                            <Button x:Name="btnFilter4" Style="{StaticResource MenuButtonTemplate}" Content="F I L T E R 4"/>
                            <Button x:Name="btnFilter5" Style="{StaticResource MenuButtonTemplate}" Content="F I L T E R 5"/>
                            <Button x:Name="btnFilter6" Style="{StaticResource MenuButtonTemplate}" Content="F I L T E R 6"/>
                            <Button x:Name="btnFilter7" Style="{StaticResource MenuButtonTemplate}" Content="F I L T E R 7"/>
                            <Button x:Name="btnFilter8" Style="{StaticResource MenuButtonTemplate}" Content="F I L T E R 8"/>
                            <Button x:Name="btnFilter9" Style="{StaticResource MenuButtonTemplate}" Content="F I L T E R 9"/>
                            <Button x:Name="btnFilter10" Style="{StaticResource MenuButtonTemplate}" Content="F I L T E R 10"/>
                        </StackPanel>
                    </materialDesign:PopupBox>
                </StackPanel>
                <Button x:Name="btnImprove" Style="{StaticResource LeftButtonStyle}"  Background="Transparent" BorderThickness="0" Content="I M P R O V E" Foreground="#8c61b0" FontSize="24" FontFamily="Consolas" Cursor="Hand" Margin="0,0,0,100"   HorizontalContentAlignment="Left"/>
                <Button x:Name="btnAuto" Style="{StaticResource LeftButtonStyle}" Background="Transparent" BorderThickness="0" Content="A U T O M A T I C " Foreground="#8c61b0" FontSize="24" FontFamily="Consolas" Cursor="Hand" Margin="0,0,0,100" HorizontalContentAlignment="Left" />
            </StackPanel>

            <!-- Save Buttons-->

            <StackPanel VerticalAlignment="Top" Grid.Column="2" Grid.Row="2">
                <Button x:Name="btnSAVE" Style="{StaticResource RoundButtonTemplate}" Width="180" Height="42" Background="#FFC8ABEB"  BorderThickness="0" Content="S A V E" FontSize="24" FontFamily="Montserrat" Cursor="Hand" BorderBrush="#FF707070" Foreground="#808C61B0"/>
            </StackPanel>

        </Grid>

        <!--LeftWing-->
        <Canvas>
            <Image Source="/Images/rightWing.png" Width="165" Height="400" Canvas.Left="0" Canvas.Top="170"/>
        </Canvas>
        <!--RightWing-->
        <Canvas>
            <Image Source="/Images/leftWing.png" Width="165" Height="400" Canvas.Right="0" Canvas.Top="170"/>
        </Canvas>

    </Grid>
</Window>